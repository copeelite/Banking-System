<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.banking.system.bankingsystem.TransactionController">
    <Label fx:id="transactionTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <TextField fx:id="recipientField" promptText="Recipient" visible="false" />
    <TextField fx:id="amountField" promptText="Amount" />
    <Button text="Submit" onAction="#onSubmitClick" />
    <Button text="Back to Dashboard" onAction="#onBackToDashboardClick" />
    <Label fx:id="confirmationLabel" textFill="green" visible="false" />
</VBox>
